@model Presentation.Web.Models.Student.IndexViewModel

@{
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Name
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var student in Model.PagedStudents.Data)
            {
                <tr>
                    <td>
                        @student.Id
                    </td>
                    <td>
                        @student.Name
                    </td>
                </tr>
            }
        </tbody>
        <!--
        <tfoot>
            <tr>
                <td>
                    // Footer stuff here.
                </td>
            </tr>
        </tfoot>
        -->
    </table>

    <ul class="pagination">
        @for (var i = 1; i <= Model.PagedStudents.NumberOfPages; i++)
        {
            <li>
                <a href="#" data-page-number="@i" class="page-number">
                    @i
                </a>
            </li>
        }
    </ul>
}
