@model Presentation.Web.ViewModels.CreatePlayerViewModel

@{
    ViewBag.Title = "title";
}

<h2>title</h2>

@using (Html.BeginForm("CreatePlayer", "MvcMatch", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", placeholder = "Name" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Initials)
        @Html.TextBoxFor(m => m.Initials, null, new { @class = "form-control", placeholder = "Initials" })
    </div>

    <button type="submit" class="btn btn-default">Submit</button>

}

