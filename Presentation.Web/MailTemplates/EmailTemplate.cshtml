@model Presentation.Web.Models.Student.MailViewModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <title>@Model.Subject</title>
</head>
<body>
<div class="page-header">
    <div class="container">
        <h1>@Model.Subject</h1>
    </div>
</div>
<div class="container body-content">
    <div class="jumbotron">
        <div class="page-header">
            <h1>@Model.Foo <small>@Model.Bar</small>
            </h1>
        </div>
        <p>@Faker.Lorem.Sentence(200)</p>
        <p>
            <a class="btn btn-primary btn-lg" href="#" role="button">@Model.Bar</a>
        </p>

        <button type="button" class="btn btn-danger">
            @Model.Qux
        </button>

        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>@Faker.Company.BS()</th>
                <th>@Faker.Company.CatchPhrase()</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>@Faker.Address.StreetAddress()</td>
                <td>@Faker.Internet.UserName()</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
